# Fernando Web Portal - Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or .env.production to version control

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3003
NEXTAUTH_SECRET=your-random-secret-here-minimum-32-characters

# Admin Credentials (temporary - replace with database auth)
ADMIN_EMAIL=your-email@example.com
ADMIN_PASSWORD=your-secure-password
ADMIN_NAME=Your Name

# Fernando API
NEXT_PUBLIC_FERNANDO_API_URL=https://your-api-url.execute-api.us-east-1.amazonaws.com/prod
NEXT_PUBLIC_TENANT_ID=your-tenant-id
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# AWS Credentials - USE IAM ROLES IN PRODUCTION, NOT ACCESS KEYS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# DynamoDB Tables
DYNAMODB_CONVERSATIONS_TABLE=fernando-conversations
DYNAMODB_MESSAGES_TABLE=fernando-messages
